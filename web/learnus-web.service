[Unit]
Description=LearnUs Contents Downloader - Web Version
After=network.target

[Service]
Type=simple
User=%i
WorkingDirectory=/opt/learnus-web
Environment="PATH=/opt/learnus-web/venv/bin"
ExecStart=/opt/learnus-web/venv/bin/python /opt/learnus-web/app.py --host 0.0.0.0 --port 5000 --production
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

